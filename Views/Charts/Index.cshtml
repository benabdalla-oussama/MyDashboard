                                <!-- jQuery Repeater Container -->
                                <div class="mt-repeater-input">
                                    <label class="control-label">Name</label>
                                    <br />
                                    <input type="text" name="text-input" class="form-control" value="John Smith" />
                                </div>
                                <div class="mt-repeater-input">
                                    <label class="control-label">Joined Date</label>
                                    <br />
